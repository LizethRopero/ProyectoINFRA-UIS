<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#9FD7C6"
    android:padding="16dp">

    <TextView
        android:id="@+id/resetPasswordTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="39dp"
        android:layout_marginEnd="33dp"
        android:text="RESTABLECER CONTRASEÑA"
        android:textColor="#263430"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/InfoResetPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="70dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="33dp"
        android:text="Ingresa tu correo para enviar un email de restablecimiento de contraseña, si no recuerdas tu email contacta al administrador del sistema para reestablecer el usuario."
        android:textAlignment="center"
        android:textColor="#263430"
        android:textStyle="bold"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/emailEditText"
        android:layout_width="235dp"
        android:layout_height="50dp"
        android:layout_below="@+id/InfoResetPassword"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:background="@color/white"
        android:hint=" Correo"
        android:inputType="textEmailAddress" />

    <ImageView
        android:id="@+id/imageViewEmail"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/emailEditText"
        android:layout_alignEnd="@+id/emailEditText"
        android:layout_alignBottom="@+id/emailEditText"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="5dp"
        android:src="@drawable/ic_email" />

    <Button
        android:id="@+id/resetPasswordButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/emailEditText"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="78dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="79dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:text="Enviar correo de restablecimiento"
        android:background="@drawable/rounded_button"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="600px"
        android:layout_below="@+id/resetPasswordTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:src="@drawable/repassword"  />

</RelativeLayout>
